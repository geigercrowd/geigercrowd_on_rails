%head{:profile => 'http://gmpg.org/xfn/11'}
  %title= "GeigerCrowd :: #{@title ? @title : 'Crowd-Sourcing radiation sensor data'}"

  %meta{:'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/
  %meta{:'http-equiv' => 'X-UA-Compatible', :content => 'text/html; charset=utf-8'}/
  %meta{:'http-equiv' => 'cache-control', :content => 'no-cache'}/

  %meta{:name => 'author', :content => 'GeigerCrowd' }/
  %meta{:name => 'copyright', :content => 'Copyleft (c)' }/
  %meta{:name => 'description', :content => 'GeigerCrowd' }/
  %meta{:name => 'keywords', :content => '' }/
  %meta{:name => 'content-language', :content => 'en-gb' }/
  %meta{:name => 'robots', :content => 'index, follow, noarchive' }/
  %meta{:name => 'revisit-after', :content => '7 days' }/
  %meta{:name => 'viewport', :content => 'width=device-width; initial-scale=1.0'}/

  = stylesheet_link_tag 'geiger.css', :media => 'screen, projection'
  = stylesheet_link_tag 'print.css', :media => 'print'
  /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

  %link{:href => 'http://fonts.googleapis.com/css?family=Francois+One', :rel => 'stylesheet', :type => 'text/css'}

  =# javascript_include_tag 'modernizr-1.5.min'

  = csrf_meta_tag
